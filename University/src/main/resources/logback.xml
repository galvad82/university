<configuration>
	<appender name="FILE" class="ch.qos.logback.core.FileAppender">
		<encoder>
			<pattern> [%-5level] %d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %c{1} - %msg%n</pattern>
		</encoder>
		<file>errorlog.log</file>
		<append>false</append>
		<immediateFlush>true</immediateFlush>
	</appender>
	<root level="info">
		<appender-ref ref="FILE"/>
	</root>
</configuration>
